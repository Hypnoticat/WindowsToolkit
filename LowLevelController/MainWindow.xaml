<Window x:Class="LowLevelController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LowLevelController"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel.Resources>
            </StackPanel.Resources>
            <ComboBox x:Name="ProcessChoice"
                      ItemsSource="{Binding MainProcs}"
                      Text="Process to point input to"
                      IsEditable="true"
                      IsReadOnly="true"
                      SelectionChanged="FindChildren"/>

            <TextBlock Text="{Binding ElementName=comboBox1, Path=SelectedItem}"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <StackPanel.Resources>
            </StackPanel.Resources>
            <ComboBox Name="ProcessChild"
                      ItemsSource="{Binding ChildProcs}"
                      Text="Control to point input to"
                      IsEditable="true"
                      IsReadOnly="true"
                      SelectionChanged="FindChildren"/>

            <TextBlock Text="{Binding ElementName=comboBox1, Path=SelectedItem}"/>
        </StackPanel>
        <Button Grid.Row="1" Name="BtnAddHook" Background="Pink" Click="AddHook">
            Add hook to selected process
        </Button>
    </Grid>
</Window>
